/* pages/page/login.wxss */
.login-wrap{
  width: 100%;
  min-height: 100vh;
  overflow: auto;
}
.bg{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -999;
}
.login-logo{
  height: 500rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
  margin-bottom: 135rpx;
}
.logo{
  width: 88rpx;
  height: 102rpx;
  margin-bottom: 52rpx;
}
.logo-text{
  font-size: 48rpx;
  color: #fff;
  font-weight: 600;
  line-height: 67rpx;
}
.btns button{
  width: 608rpx !important;
  height: 106rpx;
  padding: 0;
  line-height: 106rpx;
  margin-bottom: 42rpx;
  background: #4A90E2;
  box-shadow: 0rpx 6rpx 16rpx 0rpx rgba(0, 0, 0, 0.3);
  color: #FFFFFF;
  font-size: 36rpx;
  font-weight: 600;
  border-radius: 16rpx;
}
.btns .navigation{
  background: #fff;
  color: #4A90E2;
}
.toPhoneLogin{
  height: 42rpx;
  text-align: center;
  color: #FFFFFF;
  font-size: 30rpx;
  font-weight: 600;
  display: flex;
  justify-content: center;
  align-items: center;
}
.phone{
  display: block;
  width: 22rpx;
  height: 32rpx;
  margin-right: 6rpx;
}