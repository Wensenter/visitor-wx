/* pages/navigation/navigation.wxss */
.navigation-wrap{
  width: 100%;
  min-height: 100vh;
  padding: 30rpx;
  box-sizing: border-box;
  position: relative;
}
.map-wrap{
  /* box-sizing: border-box; */
  width: 100%;
  height: calc(100vh - 60rpx);
  /* border-radius: 20rpx; */
  box-shadow: 0rpx 8rpx 16rpx 0rpx #DBE4F8;
  /* border: 1rpx solid #9B9B9B; */
  position: relative;
  /* padding: 1rpx; */
}
.navigation-map{
  width: 100%;
  height: 100%;
  /* border-radius: 20rpx; */
}
.use-baidu-btn{
  position: absolute;
  bottom: 26rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 10001;
}
.use-baidu-btn button{
  width: 638rpx !important;
  height: 98rpx !important;
  background: #4A90E2;
  box-shadow: 0rpx 6rpx 16rpx 0rpx #89B6F4;
  border-radius: 16rpx;
  color: #fff;
  font-size: 36rpx;
  font-weight: 600;
  line-height: 98rpx;
  padding: 0;
  text-align: center;
}
